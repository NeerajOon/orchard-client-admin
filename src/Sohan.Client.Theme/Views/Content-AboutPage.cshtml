@* @inherits OrchardCore.DisplayManagement.Razor.RazorPage<OrchardCore.ContentManagement.ContentItem> *@

<main class="my-5">
    <section class="container my-5">
        <div class="text-center mb-5">
            <h1 class="display-3 fw-bold">About Our Company</h1>
            <p class="lead text-muted">Committed to innovation and excellence.</p>
        </div>

        <!-- Mission & Vision -->
        <div class="row mb-5">
            <div class="col-md-6">
                <div class="p-4 border rounded shadow-sm h-100">
                    <h3 class="mb-3"><i class="fa-solid fa-bullseye text-primary me-2"></i>Our Mission</h3>
                    <p>
                        To deliver cutting-edge digital solutions that empower businesses worldwide and create lasting value for our customers.
                    </p>
                </div>
            </div>
            <div class="col-md-6 mt-4 mt-md-0">
                <div class="p-4 border rounded shadow-sm h-100">
                    <h3 class="mb-3"><i class="fa-solid fa-eye text-success me-2"></i>Our Vision</h3>
                    <p>
                        To be recognized as a global leader in technology innovation, inspiring positive change and sustainable growth.
                    </p>
                </div>
            </div>
        </div>

        <!-- Why Choose Us -->
        <div class="mb-5 text-center">
            <h2 class="fw-semibold mb-4">Why Choose Us</h2>
            <div class="row g-4 justify-content-center">
                <div class="col-md-3 col-sm-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="fa-solid fa-rocket fa-3x text-warning mb-3"></i>
                            <h5>Fast Delivery</h5>
                            <p>We meet deadlines and accelerate your project’s success.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="fa-solid fa-shield-alt fa-3x text-primary mb-3"></i>
                            <h5>Secure</h5>
                            <p>Security is integral to all our development practices.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="fa-solid fa-users fa-3x text-success mb-3"></i>
                            <h5>Expert Team</h5>
                            <p>Our experts bring deep knowledge and passion to every project.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Meet the Team -->
        <div>
            <h2 class="text-center fw-semibold mb-4">Meet The Team</h2>
            <div class="row g-4 justify-content-center">
                <div class="col-md-3 col-sm-6">
                    <div class="card shadow-sm h-100">
                        <img src="https://via.placeholder.com/300x300" class="card-img-top rounded-circle mx-auto mt-4" style="width: 150px; height: 150px; object-fit: cover;" alt="Team Member 1" />
                        <div class="card-body text-center">
                            <h5 class="card-title mb-0">Jane Doe</h5>
                            <small class="text-muted">CEO & Founder</small>
                            <p class="mt-3">Visionary leader with 10+ years experience in tech innovation.</p>
                            <div>
                                <a href="#" class="text-primary me-2"><i class="fa-brands fa-linkedin fa-lg"></i></a>
                                <a href="#" class="text-info"><i class="fa-brands fa-twitter fa-lg"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="card shadow-sm h-100">
                        <img src="https://via.placeholder.com/300x300" class="card-img-top rounded-circle mx-auto mt-4" style="width: 150px; height: 150px; object-fit: cover;" alt="Team Member 2" />
                        <div class="card-body text-center">
                            <h5 class="card-title mb-0">John Smith</h5>
                            <small class="text-muted">CTO</small>
                            <p class="mt-3">Expert in cloud solutions and scalable architecture.</p>
                            <div>
                                <a href="#" class="text-primary me-2"><i class="fa-brands fa-linkedin fa-lg"></i></a>
                                <a href="#" class="text-info"><i class="fa-brands fa-twitter fa-lg"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Add more team members as needed -->
            </div>
        </div>
    </section>
</main>
