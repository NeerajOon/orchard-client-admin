@model Sohan.User.ViewModels.UserLoginModel;

<div class="container mb-5">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Login</h4>
                    <form id="userloginForm">
                    @Html.AntiForgeryToken()
                        <!-- Username or Email -->
                        <div class="mb-3 ">
                            <label for="usernameEmail" class="form-label">Username or Email</label>
                            <input type="text" class="form-control" id="usernameEmail" name="usernameEmail" placeholder="Enter username or email">
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" >
                                <button tabindex="-1" class="btn btn-secondary" type="button" id="toggleButton"><i class="fa-solid fa-eye me-2"></i></button>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>

                        <!-- Forgot Password -->
                        <div class="text-center mt-3">
                            <a href="~/Register">Don't have account?</a> |
                            <a href="#">Forgot password?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script asp-name="userLogin-Validation" at="Foot"></script>
<script asp-name="user" at="Foot"></script>

<script at="Foot">
     var toggleButton = document.getElementById('toggleButton');
      var icon = toggleButton.querySelector('i');
    toggleButton.addEventListener('click', function () {
        var password = document.getElementById('password');
        var type = password.getAttribute('type') === "text" ? "password" : 'text';
        password.setAttribute("type", type);
        if (type === "text") {
             icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
        } else {
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
        }
    });
</script>
